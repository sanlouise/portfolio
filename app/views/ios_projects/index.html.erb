<main>
  
  <div id="index-banner" class="parallax-container">
    <!--Image by Liz West, https://www.flickr.com/photos/calliope/118974357/in/photostream/-->
    <div class="parallax"><%= image_tag("bestroses.jpg", alt: "banner img") %></div>
    <br><br>
 -  <h1 class="header center white-text text-lighten-2">Portfolio</h1>	
  </div>
  
  <div class="container">
    <div class="section">
      
      <!--   Icon Section   -->
      <div class="row">
        <div class="col s12">
          <div class="icon-block">

            <!--Header portfolio-->
            <h2 class="center brown-text">iOS Projects</h2>
            <h5 class="center">Using Swift</h5>
            <p class="light center">I created the following projects by consulting countless online references, online bootcamps, and books. </p>
            
            <div class="col s12 center">
              <%= will_paginate @ios_projects %>
            </div>

            <!--Iterate through Projects-->
            <% @ios_projects.each do |project| %>
              <hr/>
              <div class="row">
                <div class="col s12">
                  <div class="col s12 l7">
                    <!--Project Title-->
                    <h3 class="center"><%= project.title %></h3>
                    <!--Project Description-->
                    <p><%= project.description.html_safe %></p>
                    <!--Project Points-->
                    <ul class="portfolio">
                      <%= project.points.html_safe %>
                    </ul>
                    <!--GitHub link-->
                    <p>
                      <i class="fa fa-github"></i> <%= link_to "GitHub Repository", 
                                                                  project.github %>
                    </p>
                  </div>
                  
                  <!--Project Image-->
                  <div class="col s12 l5 center">
                    <iframe src="<%= project.image %>" width="183px" height="391px" frameborder="0" scrolling="no"></iframe>
                  </div>
                </div>
              </div>
            <% end %>
              
          </div>
        </div>
      </div>
    </div>
  </div>
</main>