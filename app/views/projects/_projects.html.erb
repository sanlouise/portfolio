<!--Iterate through Projects-->
<% projects.each do |project| %>
  <hr/>
  <div class="row">
    <div class="col s12">
      <div class="col s12 l7">
        <!--Project Title-->
        <h3 class="center"><%= project.title %></h3>
        <!--Project Description-->
        <p><%= project.description %></p>
        <!--Project Points-->
        <ul class="portfolio">
          <%= project.points.html_safe %>
        </ul>
        <!--GitHub link-->
        <p>
          <i class="fa fa-github"></i> <%= link_to "GitHub Repository", project.github %>
        </p>
      </div>

      <% if project.project_type == "iOS" %>
        <div class="col s12 l5 center">
          <iframe src="<%= project.live_link %>" width="183px" height="391px" frameborder="0" scrolling="no"></iframe>
        </div>
      <% else %>
        <div class="col s12 l5">
          <% if project.live_link %>
            <%= link_to image_tag(project.image, class: "responsive-img z-depth-2 center"), project.live_link %>
          <% else %>
            <%= image_tag(project.image, class: "responsive-img z-depth-2 center") %>
          <% end %>
        </div>
      <% end %>

    </div>
  </div>
<% end %>
