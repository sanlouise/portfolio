<main>
  
  <div id="index-banner" class="parallax-container">
    <div class="parallax"><%= image_tag("pinkroses.jpg", alt: "banner img") %></div>
    <br><br>
 -  <h1 class="header center white-text text-lighten-2">Portfolio</h1>	
  </div>
  
  <div class="container">
    <div class="section">
      
      <!--   Icon Section   -->
      <div class="row">
        <div class="col s12">
          <div class="icon-block">

            <!--Header portfolio-->
            <h2 class="center brown-text">Ruby on Rails</h2>
            <h5 class="center">Personal Projects</h5>
            <p class="light center">I created the following projects by consulting countless online references, online bootcamps, and books. </p>
            
            <!--Iterate through Rails Projects-->
            <% @rails_projects.each do |project| %>
              <hr/>
              <div class="row">
                <div class="col s12">
                  <div class="col s12 l7">
                    <!--Project Title-->
                    <h3 class="center"><%= project.title %></h3>
                    <!--Project Description-->
                    <p><%= project.description %></p>
                    <!--Project Points-->
                    <ul class="portfolio">
                      <%= project.points.html_safe %>
                    </ul>
                    <!--GitHub link-->
                    <p>
                      <i class="fa fa-github"></i> <%= link_to "GitHub Repository", 
                                                                  project.github %>
                    </p>
                  </div>
                  
                  <!--Project Image-->
                  <div class="col s12 l5">
                    <%= link_to project.live_link do %>
                      <%= image_tag(project.image, class: "responsive-img z-depth-2") %>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
              
          </div>
        </div>
      </div>
    </div>
  </div>
</main>