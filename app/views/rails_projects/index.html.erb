<p id="notice"><%= notice %></p>

<h1>Listing Rails Projects</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Points</th>
      <th>Github</th>
      <th>Live link</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rails_projects.each do |rails_project| %>
      <tr>
        <td><%= rails_project.title %></td>
        <td><%= rails_project.description %></td>
        <td><%= rails_project.points %></td>
        <td><%= rails_project.github %></td>
        <td><%= rails_project.live_link %></td>
        <td><%= rails_project.image %></td>
        <td><%= link_to 'Show', rails_project %></td>
        <td><%= link_to 'Edit', edit_rails_project_path(rails_project) %></td>
        <td><%= link_to 'Destroy', rails_project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

